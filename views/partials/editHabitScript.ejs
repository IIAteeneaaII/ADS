<script>
    function confirmarEliminacion(nombre, id) {
        Swal.fire({
            title: '¿Eliminar hábito?',
            text: `¿Estás seguro de que deseas eliminar "${nombre}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        }).then(async (result) => {
            if (result.isConfirmed) {
                const response = await fetch(`/api/habit/${id}`, {
                    method: 'DELETE',
                    headers: {
                        Authorization: `Bearer ${localStorage.getItem('token')}`
                    }
                });

                if (response.ok) {
                    mostrarAlerta({
    title: 'Eliminado',
    text: 'El hábito ha sido eliminado',
    imageUrl: '/img/sharki/feliz.png', // o la imagen que prefieras
    redirectUrl: '/GestionarMisHabitos',
    btnText: 'Aceptar'
});
                } else {
                    Swal.fire('Error', 'No se pudo eliminar el hábito', 'error');
                }
            }
        });
    }
</script>