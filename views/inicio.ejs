<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%- include('partials/allStyles') %>
  <title>Inicio</title>
</head>


<body>
  <!-- Overlay oscuro -->
  <div id="overlay" class="overlay"></div>

  <div class="container_inicio">
    <!-- Menú lateral -->
    <%- include('partials/menuLateral',{ userName: userName }) %>
      <!-- Barra superior -->
      <div class="top-bar-inicio">
        <div class="iconos" id="btnMenu">
          <i class="fas fa-bars"></i>
        </div>
        <div class="icons">
          <i class="fa-regular fa-bell iconos" onclick="location.href='/notificaciones';" title="Notificaciones"
            style="position: relative;">
            <% if (unreadNotifications> 0) { %>
              <span id="unread-count" class="badge bg-danger" style="position: absolute; top: -5px; right: -5px;">
                <%= unreadNotifications %>
              </span>
              <% } %>
          </i>
          <div class="iconos">
            <i class="fa-solid fa-bolt" onclick="location.href='/racha';" title="Racha"></i>
          </div>
        </div>
      </div>

      <!-- Contenido principal -->
      <div class="container-md">
        <h1>Hola, <span id="nombreUsuario">
            <%= userName %>
          </span> </h1>

        <div class="day_state">
          <div class="day_number">
            <div class="fw-bold fecha" id="diaSemana">Sábado</div>
            <div class="day-badge fecha_num" id="numeroDia">7</div>
          </div>
          <div class="state">
            <p>¿Cómo te sientes el día de hoy?</p>
            <button class="btn-tertiary" onclick="location.href='/estadodeAnimo';">
              <i class="fa-solid fa-face-meh-blank emoji" id="emoji-inicio"></i>
            </button>
          </div>
        </div>
        <div class="habit-toggle d-flex justify-content-center my-3">
          <button class="habit-tab" onclick="location.href='/gestionarMisHabitos'">Mis hábitos</button>
          <button class="habit-tab" onclick="location.href='/gestionarHabitos'">
            Crear nuevo hábito
          </button>
        </div>

        <div class="habitos_titulo">
          <h2>Habitos de hoy</h2>
        </div>
        <!-- Sección de hábitos -->
        <div class="mt-4" id="seccion-de-habitos">
          
        </div>
      </div>
  </div>


  <!-- Modal de cierre de sesión -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <form class="modal-content"> <!-- sin action ni method para evitar submit -->
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">¿Deseas cerrar sesión?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          Tu sesión actual se cerrará. ¿Estás seguro?
          <input type="hidden" name="accion" value="logout">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" id="confirmarLogout" class="btn btn-primary">Cerrar sesión</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS + lógica -->
  <%- include('partials/allScripts') %>
  <script src="/js/inicio.js"></script>
  <script>
    document.getElementById('confirmarLogout').addEventListener('click', () => {
      window.location.href = '/';
    });
  </script>
</body>

</html>