<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%- include('partials/allStyles') %>
    <title>Inicio</title>
</head>

<body>
  <!-- Overlay oscuro -->
  <div id="overlay" class="overlay"></div>

  <div class="container_inicio">
    <!-- Menú lateral -->
    <%- include('partials/menuLateral',{ userName: userName }) %>
      <!-- Barra superior -->
      <div class="top-bar-inicio">
        <div class="iconos" id="btnMenu">
          <i class="fas fa-bars"></i>
        </div>
        <div class="icons">
          <i class="fa-regular fa-bell iconos" onclick="location.href='/notificaciones';" title="Notificaciones"
            style="position: relative;">
            <% if (unreadNotifications> 0) { %>
              <span id="unread-count" class="badge bg-danger" style="position: absolute; top: -5px; right: -5px;">
                <%= unreadNotifications %>
              </span>
              <% } %>
          </i>
          <div class="gif">
            <i onclick="location.href='/racha';" title="Racha">
              <img src="/img/fire.gif" alt="Fuego" class="fire-racha" style="width: 40px; height: 40px;" />
            </i>
          </div>
        </div>
      </div>

      <!-- Contenido principal -->
      <div class="container-md">
        <h1>Hola, <span class="nombreUsuario" id="nombreUsuario">
            <%= userName %>
          </span> </h1>

        <div class="day_state">
          <div class="day_number">
            <div class="fw-bold fecha" id="diaSemana">Sábado</div>
            <div class="day-badge fecha_num" id="numeroDia">7</div>
          </div>
          <div class="state">
            <p>¿Cómo te sientes el día de hoy?</p>
            <button class="btn-tertiary" onclick="location.href='/estadodeAnimo';">
              <span class="emoji" id="emoji-inicio">😄</span>
            </button>


          </div>
        </div>
        <!-- Sección de completados -->
        <div id="contenedor-grafica"></div>

        <div class="habitos_titulo">
          <h2>Hábitos de hoy</h2>
        </div>
        <!-- Sección de hábitos -->
        <div class="habits_section mt-4" id="seccion-de-habitos">

        </div>
      </div>
  </div>

  <!-- Modal de cierre de sesión -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content"> <!-- sin action ni method para evitar submit -->
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">¿Deseas cerrar sesión?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          Tu sesión actual se cerrará. ¿Estás seguro?
          <input type="hidden" name="accion" value="logout">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" id="confirmarLogout" class="btn btn-primary">Cerrar sesión</button>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/navBar')%>
  <%- include('partials/allScripts') %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0"></script>
  <script src="/js/flashMessage.js"></script>
  <script src="/js/inicio.js"></script>
  <script>
    document.getElementById('confirmarLogout').addEventListener('click', () => {
      window.location.href = '/';
    });
  </script>
</body>

</html>