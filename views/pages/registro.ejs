

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="login-box w-100">
            <header class="text-center">
                <div class="container_logo">
                    <img src="/img/fin_negro.png" class="img" alt="Logo Fin" />
                    <img src="/img/negro.png" class="img" alt="Fin It" />
                </div>
            </header>

            <main>
                <div class="form-container">
                    <h2 class="text-center mb-4">Registrarse</h2>
                    <form id="formRegistro" autocomplete="off" action="/api/auth/register" method="POST">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre de usuario:</label>
                            <input type="text" class="form-control" id="userName" name="userName"
                                placeholder="Ingresa tu usuario" />
                        </div>
                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo electrónico:</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Ingresa tu correo" />
                        </div>
                        <div class="mb-3">
                            <label for="contrasena" class="form-label">Contraseña:</label>
                            <div class="position-relative">
                                <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña" />
                                <i id="togglePassword" class="fa-solid fa-eye" data-visible="false" style="cursor: pointer; position: absolute; top: 50%; right: 10px; transform: translateY(-50%);"></i>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="confirmarContrasena" class="form-label">Confirmar contraseña:</label>
                            <div class="position-relative">
                                <input type="password" class="form-control" id="confirmarContrasena" name="confirmarContrasena" placeholder="Confirmar contraseña" />
                                <i id="togglePassword2" class="fa-solid fa-eye" data-visible="false" style="cursor: pointer; position: absolute; top: 50%; right: 10px; transform: translateY(-50%);"></i>
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input class="check" type="checkbox" id="terminosCheck" />
                            <label class="form-check-label" for="terminosCheck">
                                Aceptar <a href="/terminosyCondiciones">términos y condiciones</a>
                            </label>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn-primary">Registrarse</button>
                            <button type="button" class="btn-secondary">Cancelar</button>
                        </div>
                    </form>
                    <p class="text-end mt-3">
                        ¿Ya tienes cuenta? <a href="/">Inicia sesión</a>
                    </p>
                </div>
            </main>
        </div>
    </div>

    <% extraScripts = `
  <script src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js"></script>
  <script src="/js/registro.js"></script>
` %>