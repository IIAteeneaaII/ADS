<!DOCTYPE html> 
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eliminar cuenta</title>
  <link href="../bootstrap-5.0.2/css/bootstrap.min.css" rel="stylesheet" />
  <link href="../css/styles.css" rel="stylesheet">
  <style>
    .password-container {
      position: relative;
    }
    .password-toggle {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      z-index: 2;
    }
    .form-control {
      padding-right: 40px; /* Espacio para el √≠cono */
    }
  </style>
</head>
<body>
    <div class="container py-4">
        <a href="/eliminarcuenta1" class="back-arrow">&lsaquo;</a>

        <h1 style="color: white;">Eliminar Cuenta</h1>
        <p style="color: white;">Por tu seguridad, ingresa tu correo electr√≥nico y contrase√±a para confirmar.</p>
        
        <div class="container-md">
            <!-- Campo para el correo electr√≥nico -->
            <div class="mb-3">
                <label for="email" class="form-label" style="color: white;">Correo Electr√≥nico</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="tucorreo@example.com" required>
            </div>
            
            <!-- Campo para la contrase√±a con toggle -->
            <div class="mb-3 password-container">
                <label for="contrasena" class="form-label" style="color: white;">Contrase√±a</label>
                <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Contrase√±a" required>
                <span class="password-toggle" id="togglePassword">üëÅÔ∏è</span>
            </div>
            
            <div class="separator my-3"></div>
            <div class="container-md botones-eliminar">
                <button type="button" class="btn btn-secondary" id="btnEliminar">Eliminar Cuenta</button>
                <button type="button" class="btn btn-primary" onclick="window.history.back()">Cancelar</button>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="/bootstrap-5.0.2/js/bootstrap.bundle.min.js"></script>
    <script>
      // Funci√≥n para alternar visibilidad de contrase√±a
      document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordInput = document.getElementById("contrasena");
        const type = passwordInput.type === "password" ? "text" : "password";
        passwordInput.type = type;
        this.textContent = type === "password" ? "üëÅÔ∏è" : "üôà";
      });

      // Funci√≥n para eliminar cuenta
      document.getElementById("btnEliminar").addEventListener("click", async () => {
        const email = document.getElementById("email").value;
        const password = document.getElementById("contrasena").value;

        if (!email || !password) {
          alert("Por favor, completa todos los campos.");
          return;
        }

        try {
          // 1. Eliminar la cuenta (POST a /api/auth/deleteAcc)
          const deleteResponse = await fetch("/api/auth/deleteAcc", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            credentials: 'include', // Necesario para cookies HttpOnly
            body: JSON.stringify({ email, password })
          });

          if (deleteResponse.ok) {
            // 2. Cerrar sesi√≥n para eliminar la cookie `token` (GET a /logout)
            await fetch('/logout', { 
              method: 'GET',
              credentials: 'include' // Importante para incluir cookies
            });

            // 3. Limpiar el token del localStorage (si existe)
            localStorage.removeItem('token');

            // 4. Redirigir al inicio con mensaje
            alert("Cuenta eliminada correctamente.");
            window.location.href = '/';
          } else {
            const error = await deleteResponse.json();
            alert(`Error: ${error.message || "No se pudo eliminar la cuenta. Verifica tus datos."}`);
          }
        } catch (err) {
          console.error("Error al eliminar la cuenta:", err);
          alert("Ocurri√≥ un error inesperado. Intenta nuevamente.");
        }
      });
    </script>
</body>
</html>