<!DOCTYPE html> 
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eliminar cuenta</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link href="../bootstrap-5.0.2/css/bootstrap.min.css" rel="stylesheet" />
  <link href="../css/styles.css" rel="stylesheet">
  <style>
    .password-container {
      position: relative;
    }
    .password-toggle {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      z-index: 2;
    }
    .form-control {
      padding-right: 40px; /* Espacio para el √≠cono */
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <div class="top-bar"> 
      <a href="/eliminarcuenta1" class="back-arrow">
          <i class="fas fa-chevron-left"></i>
      </a>
      <h1 class="fw-bold">Eliminar cuenta</h1>
    </div>
    <div class="separator"></div>
    <div class="container-md contrasena-eliminar">
      <p>Por tu seguridad, ingresa tu contrase√±a para confirmar.</p>
      <!-- Campo oculto para el correo electr√≥nico -->
      <input type="hidden" id="email" name="email">

      <!-- Campo para la contrase√±a con toggle -->
      <div class="mb-3 password-container">
        <label for="contrasena" class="form-label">Contrase√±a:</label>
        <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Contrase√±a" required>
        <span class="password-toggle" id="togglePassword">üëÅÔ∏è</span>
      </div>
      
      <div class="separator my-3"></div>
      <div class="container-md botones-eliminar">
        <button type="button" class="btn btn-secondary" id="btnEliminar">Eliminar Cuenta</button>
        <button type="button" class="btn btn-primary" onclick="window.history.back()">Cancelar</button>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="/bootstrap-5.0.2/js/bootstrap.bundle.min.js"></script>

  <script>
    // Mostrar/ocultar contrase√±a
    document.getElementById("togglePassword").addEventListener("click", function () {
      const passwordInput = document.getElementById("contrasena");
      const type = passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;
      this.textContent = type === "password" ? "üëÅÔ∏è" : "üôà";
    });

    // Cargar correo desde localStorage
    document.addEventListener("DOMContentLoaded", () => {
      const storedEmail = localStorage.getItem("savedEmail");
      if (storedEmail) {
        document.getElementById("email").value = storedEmail;
      } else {
        alert("No se encontr√≥ un correo guardado. Por favor, inicia sesi√≥n nuevamente.");
        window.location.href = "/login";
      }
    });

    // Eliminar cuenta
    document.getElementById("btnEliminar").addEventListener("click", async () => {
      const email = document.getElementById("email").value;
      const password = document.getElementById("contrasena").value;

      if (!email || !password) {
        alert("Por favor, completa todos los campos.");
        return;
      }

      try {
        const deleteResponse = await fetch("/api/auth/deleteAcc", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          credentials: 'include',
          body: JSON.stringify({ email, password })
        });

        if (deleteResponse.ok) {
          await fetch('/logout', {
            method: 'GET',
            credentials: 'include'
          });

          localStorage.removeItem('token');
          localStorage.removeItem('savedEmail');
          alert("Cuenta eliminada correctamente.");
          window.location.href = '/';
        } else {
          const error = await deleteResponse.json();
          alert(`Error: ${error.message || "No se pudo eliminar la cuenta. Verifica tus datos."}`);
        }
      } catch (err) {
        console.error("Error al eliminar la cuenta:", err);
        alert("Ocurri√≥ un error inesperado. Intenta nuevamente.");
      }
    });
  </script>
</body>
</html>
